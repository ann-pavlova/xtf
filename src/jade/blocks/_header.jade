include ../mixins/_svg-sprite
.b-header__wrapper(class=pageHome === true ? "b-header__wrapper_type_home":"")
    .b-header.b-header_type_desk
        .container
            .b-header__inner
                a(href="index.html").b-header__logo
                    +svg('logo')
                .b-header__menu
                    - var menu = ['about', 'services', 'projects', 'careers', 'contacts'];
                        ul.b-header__menu-list
                            for item in menu
                                if item === current
                                    li.b-header__menu-item
                                        a.b-header__menu-link.is-active(href="./" + item + ".html")= item
                                else
                                    li.b-header__menu-item
                                        a.b-header__menu-link(href="./" + item + ".html")= item
                .b-header__langs(class=pageHome === true ? "b-header__langs_page_home":"")
                    .b-header__lang.is-active eng
                    .b-header__lang-slash /
                    a.b-header__lang(href="./ru/" + current + ".html") ru
                .b-header__contact-info
                    a(href="mailto:office_au@xtf-engineering.com") office_au@xtf-engineering.com
                    a(href="tel:+61449970248") +61 449 970 248
